{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "enabled": false,
      "automerge": false
    },
    {
      "matchManagers": ["git-submodules"],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources":["maven", "docker", "github-releases", "go"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false,
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources":["docker"],
      "matchUpdateTypes": ["minor", "patch", "pin", "pinDigest"],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources":["github-releases"],
      "matchUpdateTypes": ["minor"],
      "enabled": true,
      "automerge": false
    },
    {
      "matchDatasources":["go"],
      "matchUpdateTypes": ["minor"],
      "groupName": "all golang minor dependencies",
      "groupSlug": "go-minor-upgrades",
      "enabled": true,
      "automerge": false
    },
    {
      "matchDatasources":["go"],
      "matchPackageNames": [
        "golang.org/x/**",
        "go"
      ],
      "matchUpdateTypes": ["minor"],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources":["go"],
      "matchUpdateTypes": ["digest"],
      "enabled": false
    },
    {
      "matchBaseBranches": ["release-*", "alauda-*"],
      "extends":["security:only-security-updates"],
      "automerge": true
    },
    {
      "matchDatasources":["go"],
      "matchPackageNames": [
        "golang.org/x/**",
        "go"
      ],
      "matchUpdateTypes": ["minor"],
      "groupName": "golang official packages",
      "groupSlug": "go-official-packages"
    },
    {
      "matchPackageNames": [
        "k8s.io/**",
        "sigs.k8s.io/**",
        "github.com/kubernetes/**",
        "kubernetes/**"
      ],
      "groupName": "kubernetes"
    },
    {
      "groupName": "all patch dependencies",
      "groupSlug": "patch-upgrades",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ],
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "labels": ["dependencies"],
  "git-submodules": {
    "enabled": true
  },
  "baseBranches": ["main"]
}
